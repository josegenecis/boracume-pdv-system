
{
  "name": "bora-cume-hub-desktop",
  "version": "1.0.0",
  "description": "Desktop application for Bora Cume Hub",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps && npm run rebuild"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "serialport": "^12.0.0",
    "node-thermal-printer": "^4.5.0"
  },
  "build": {
    "appId": "com.boracumehub.desktop",
    "productName": "Bora Cume Hub Desktop",
    "directories": {
      "output": "../dist-electron"
    },
    "files": [
      "../dist/**/*",
      "**/*",
      "!node_modules/**/*",
      "node_modules/serialport/**/*",
      "node_modules/node-thermal-printer/**/*"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "../public/favicon.ico",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowElevation": false,
      "runAfterFinish": false
    },
    "portable": {
      "requestedExecutionLevel": "asInvoker"
    },
    "nodeGypRebuild": true,
    "npmRebuild": true,
    "buildDependenciesFromSource": true
  }
}
